<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120">

    <TextView
        android:id="@+id/item_bill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/y26"
        android:text="支付宝充值"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x28" />

    <TextView
        android:id="@+id/item_bill_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_bill_name"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/x4"
        android:text="2018-12-12  09:09:22" />

    <TextView
        android:id="@+id/item_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x40"
        android:text="20.00"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x36"
        android:textStyle="bold" />


    <View
        style="@style/horizontal_F0_line"
        android:layout_below="@+id/item_bill_time"
        android:layout_marginTop="@dimen/y10" />


</RelativeLayout>