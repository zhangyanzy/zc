<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHeadLine"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动要求："
            android:textColor="@color/colorFont6"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.完善个人资料并完成实名认证；"
            android:textColor="@color/colorFont6"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.完善个人标签。"
            android:textColor="@color/colorFont6"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手任务奖励："
            android:textColor="@color/colorFont6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/newbie_task_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.00元"
            android:textColor="@color/colorFont3"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/newbie_task_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/newbie_task_btn"
        android:text="开始任务"
        android:textColor="@color/colorWhite" />

</LinearLayout>
