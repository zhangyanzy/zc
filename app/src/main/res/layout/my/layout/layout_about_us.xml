<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorHeadLine">

    <include layout="@layout/layout_top_title"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        android:background="@drawable/button_shape_round"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/logo"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/colorFont6"
        android:text="当前版本1.1.1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14"
            android:text="邮箱"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View style="@style/horizontal_C9_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_16"
            android:text="电话"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View style="@style/horizontal_C9_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14"
            android:text="地址"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View style="@style/horizontal_C9_line"/>

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/colorFont3"
        android:text="隐私条款"
        android:padding="12dp"
        android:background="@color/colorWhite"/>

</LinearLayout>