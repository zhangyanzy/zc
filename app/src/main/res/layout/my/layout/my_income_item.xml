<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/window_padding_15"
        android:layout_marginRight="@dimen/window_padding_15"
        android:text="参与凯迪拉克试驾活动"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_describe"
        android:layout_below="@+id/tv_describe"
        android:layout_marginTop="5dp"
        android:text="2018-1-1 10:00"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_describe"
        android:layout_marginRight="@dimen/window_padding_15"
        android:text="+100元"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_time"
        android:layout_marginRight="@dimen/window_padding_15"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14" />

    <View
        style="@style/horizontal_C9_line"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="10dp" />
</RelativeLayout>