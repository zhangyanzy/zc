<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/window_padding_15"
    android:paddingTop="10dp">

    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_businer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_logo"
        android:layout_toStartOf="@+id/tv_followed"
        android:text="凯迪拉克"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_activity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_logo"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/iv_logo"
        android:text="共100个活动"
        android:textColor="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_followed"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_shape_white_round"
        android:gravity="center"
        android:text="已关注"
        android:textColor="@color/colorLine"
        android:textSize="@dimen/font_size_12"
        android:layout_marginEnd="@dimen/window_padding_15"/>

    <View style="@style/horizontal_F0_line"
        android:layout_below="@+id/iv_logo"
        android:layout_alignStart="@+id/tv_businer_name"
        android:layout_marginTop="10dp"/>
</RelativeLayout>




