<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar
        android:id="@+id/layout_top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"></cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/label_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top_title"
        android:paddingBottom="30dp">

    </com.zhy.view.flowlayout.TagFlowLayout>


    <ImageView
        android:id="@+id/add_label"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/y144"
        android:layout_above="@+id/tv_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y80"
        android:src="@mipmap/add_label_icon" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/x622"
        android:layout_height="@dimen/y80"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/window_padding_bottom"
        android:background="@drawable/button_black_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />

</RelativeLayout>