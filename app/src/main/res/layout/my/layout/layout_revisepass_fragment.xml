<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="45dp">

       <TextView
           android:layout_width="74dp"
           android:layout_height="wrap_content"
           android:textColor="@color/colorFont6"
           android:textSize="@dimen/font_size_14"
           android:text="原密码"
           android:layout_gravity="bottom"
           android:paddingBottom="5dp"/>

       <EditText
           android:id="@+id/edit_old_pass"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/edit_shape_no_border"
           android:textColor="@color/colorFont6"
           android:textSize="@dimen/font_size_14"
           android:paddingLeft="10dp"/>
   </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:text="新密码"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:text="确认新密码"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_orange_round"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

</LinearLayout>