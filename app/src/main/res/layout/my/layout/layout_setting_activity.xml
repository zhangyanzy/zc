<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <View style="@style/horizontal_C9_line" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_round"
        android:padding="8dp"
        android:src="@mipmap/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_18"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="V 1.0.0"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        style="@style/horizontal_C9_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/layout_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="0KB"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        style="@style/horizontal_C9_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:text="关于我们"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14"
        android:drawableRight="@mipmap/turn_right"/>

    <View
        style="@style/horizontal_C9_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0"
            android:text="首页活动显示"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14" />

        <RadioGroup
            android:id="@+id/layout_setting_activity_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/layout_setting_activity_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部活动"
                android:textColor="@color/colorFont6"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/layout_setting_activity_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前城市活动"
                android:textColor="@color/colorFont6"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>

    <View
        style="@style/horizontal_C9_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

</LinearLayout>