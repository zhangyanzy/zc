<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar
        android:id="@+id/feed_back_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"></cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feedback_icon"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:src="@mipmap/feedback_icon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_toEndOf="@+id/feedback_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/window_padding"
            android:text="@string/feedback"
            android:textColor="@color/color1"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>


    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:background="@drawable/edit_shape_border"
        android:gravity="start"
        android:padding="@dimen/window_padding"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorLine"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/window_padding_15"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />


</LinearLayout>