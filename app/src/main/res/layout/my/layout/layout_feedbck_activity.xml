<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14"
        android:text="@string/feedback"
        android:padding="@dimen/window_padding"/>

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/edit_shape_border"
        android:hint="@string/feedback_hint"
        android:textColorHint="@color/colorLine"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/colorFont6"
        android:gravity="start"
        android:padding="@dimen/window_padding"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape_white_round"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="提交"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_18"
        android:layout_marginTop="@dimen/window_padding_15"/>


</LinearLayout>