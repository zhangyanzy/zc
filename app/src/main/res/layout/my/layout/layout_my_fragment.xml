<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <cn.zhaocaiapp.zc_app_android.widget.ZoomInScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">

                <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/user_girl" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_user_photo"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_identify"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_shape_orange_round"
                    android:gravity="center"
                    android:text="未认证"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_user_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_user_photo"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/iv_user_photo"
                    android:text="0.00元"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_user_balance"
                    android:layout_below="@+id/tv_user_balance"
                    android:text="账户余额"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_user_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_user_photo"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/tv_user_balance"
                    android:text="0.00元"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_user_income"
                    android:layout_below="@id/tv_user_income"
                    android:text="总收入"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_apply_cash"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_user_balance"
                    android:background="@drawable/button_shape_gray_round"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View style="@style/C9_8dp_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingEnd="9dp"
                android:paddingStart="9dp"
                android:paddingTop="12dp"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/layout_all_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/test_icon" />

                    <TextView
                        android:id="@+id/tv_all_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="全部活动"
                        android:textColor="@color/colorFont6"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_deliver_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/test_icon" />

                    <TextView
                        android:id="@+id/tv_deliver_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待交付"
                        android:textColor="@color/colorFont6"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_verify_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/test_icon" />

                    <TextView
                        android:id="@+id/tv_verify_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待审核"
                        android:textColor="@color/colorFont6"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_reward_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/test_icon" />

                    <TextView
                        android:id="@+id/tv_reward_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待领钱"
                        android:textColor="@color/colorFont6"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_failed_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/test_icon" />

                    <TextView
                        android:id="@+id/tv_failed_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="未通过"
                        android:textColor="@color/colorFont6"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/C9_8dp_divider" />

            <LinearLayout
                android:id="@+id/layout_invite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/identity"
                    android:drawablePadding="10dp"
                    android:text="邀请好友"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@mipmap/test_icon"
                    android:text="邀请好友立奖10元"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </LinearLayout>

            <View style="@style/horizontal_C9_line" />

            <TextView
                android:id="@+id/tv_account_manager"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@mipmap/enchashment"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="管理提现账户"
                android:textColor="@color/colorFont6"
                android:textSize="14sp" />

            <View style="@style/horizontal_C9_line" />

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@mipmap/address_manager"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我的关注"
                android:textColor="@color/colorFont6"
                android:textSize="14sp" />

            <View style="@style/horizontal_C9_line" />

            <LinearLayout
                android:id="@+id/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/group"
                    android:drawablePadding="10dp"
                    android:text="联系客服"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="150dp"
                    android:text="400-2342-555"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/horizontal_C9_line" />

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/group"
                    android:drawablePadding="10dp"
                    android:text="企业邮箱"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_invitation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="100dp"
                    android:text="123fdf@zhaocaiapp.cn"
                    android:textColor="@color/colorFont6"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/horizontal_C9_line" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@mipmap/task_list"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="设置"
                android:textColor="@color/colorFont6"
                android:textSize="14sp" />

            <View style="@style/C9_8dp_divider" />
