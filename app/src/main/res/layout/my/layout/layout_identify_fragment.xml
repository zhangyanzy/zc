<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorHeadLine"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_card_front"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/window_padding"
                android:paddingRight="6dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/real_info" />

            <ImageView
                android:id="@+id/iv_card_behind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingRight="@dimen/window_padding"
                android:scaleType="fitCenter"
                android:src="@mipmap/real_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性        别："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableRight="@mipmap/turn_right"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_birth_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableRight="@mipmap/turn_right"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/edit_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有  效  期："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证状态："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_identify_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <!--<View style="@style/horizontal_F0_line" />-->

        <CheckBox
            android:id="@+id/confirm_card"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/colorHeadLine"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/colorFont6"
            android:text="@string/confirm_card_info"
            android:drawablePadding="10dp"
            android:button="@null"
            android:drawableStart="@drawable/checkbox_selector_agreement"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape_orange_round"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>