<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="认证状态："/>

        <TextView
            android:id="@+id/tv_identify_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:text="待认证"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="真实姓名："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="安琪儿"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="性         别："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/tv_user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="女" />

    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="出生日期："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/tv_birth_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="1994-01-28"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="身份证号："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="1234567890"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/window_padding_30"
        android:src="@mipmap/add_picture"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_orange_round"
        android:layout_marginBottom="@dimen/window_padding_30"
        android:gravity="center"/>

</LinearLayout>