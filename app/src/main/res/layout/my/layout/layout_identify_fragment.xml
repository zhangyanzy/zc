<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_scan_picture"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/real_info"
            android:background="@color/colorLine"
            android:paddingTop="@dimen/window_padding"
            android:paddingBottom="@dimen/window_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性         别："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableRight="@mipmap/turn_right"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_birth_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableRight="@mipmap/turn_right"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/edit_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/horizontal_F0_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_select_project"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/window_padding"
            android:paddingRight="@dimen/window_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证状态："
                android:textColor="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_identify_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/colorFont6"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View style="@style/divider_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape_orange_round"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>