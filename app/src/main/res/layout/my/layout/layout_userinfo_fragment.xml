<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/user_girl"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_14"
        android:text="更换头像"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="昵         称："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="道格拉斯.古尔其"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="手机号码："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="1234567890"
            android:layout_marginRight="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="修改手机号码"
            android:layout_marginRight="12dp"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="家庭住址："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="上海市陆家嘴"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:text="公司地址："
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/edit_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="15dp"
            android:text="上海市陆家嘴"/>
    </LinearLayout>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_orange_round"
        android:layout_marginTop="80dp"
        android:gravity="center"/>

</LinearLayout>