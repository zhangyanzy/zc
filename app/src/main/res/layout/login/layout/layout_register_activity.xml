<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="158dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_skip_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_bottom"
        android:paddingStart="@dimen/window_padding_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手  机  号"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/edit_margin"
            android:background="@null"
            android:hint="@string/input_phone_number"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="@dimen/edit_line_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="验  证  码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/edit_identify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/edit_margin"
            android:layout_marginStart="@dimen/edit_margin"
            android:layout_toEndOf="@+id/tv_code"
            android:layout_toStartOf="@+id/send_identify_code"
            android:background="@null"
            android:hint="@string/input_identify_code"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/send_identify_code"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape_orange_bg"
            android:gravity="center"
            android:text="@string/get_identify_code"
            android:textColor="@color/colorBg"
            android:textSize="@dimen/font_size_14" />

        <View
            style="@style/horizontal_F0_line"
            android:layout_alignBottom="@+id/send_identify_code"
            android:layout_toStartOf="@+id/send_identify_code"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_bottom"
        android:paddingStart="@dimen/window_padding_bottom"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="密        码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/edit_pass_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/edit_margin"
            android:background="@null"
            android:hint="@string/input_pass_word"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14"
            />

    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="@dimen/edit_line_top"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_bottom"
        android:paddingStart="@dimen/window_padding_bottom"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/confirm_pass_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/edit_margin"
            android:background="@null"
            android:hint="@string/confirm_pass"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="@dimen/edit_line_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_bottom"
        android:paddingStart="@dimen/window_padding_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="邀  请  码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/edit_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/edit_margin"
            android:hint="@string/input_edit_invite_code"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="@dimen/edit_line_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/window_padding_bottom"
        android:layout_marginRight="@dimen/window_padding_bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_agreement"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/checkbox_selector_agreement"
            android:button="@null"
            android:checked="false"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/edit_margin"
            android:gravity="center_vertical"
            android:text="@string/agreement"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/window_padding_bottom"
        android:layout_marginEnd="@dimen/window_padding_bottom"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape_orange_round"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>