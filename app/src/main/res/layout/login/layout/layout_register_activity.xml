<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_skip_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/launcher" />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_shape_border"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_number"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="15sp"
        android:inputType="phone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edit_identify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_shape_border"
            android:drawableLeft="@mipmap/identify_code"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="@string/input_identify_code"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorFont9"
            android:textSize="15sp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/send_identify_code"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/edit_identify_code"
            android:background="@drawable/button_shape_orange_bg"
            android:text="@string/get_identify_code"
            android:textColor="@color/colorBg"
            android:textSize="15sp"
            android:gravity="center"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_pass_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_shape_border"
        android:drawableLeft="@mipmap/pass"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_pass_word"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edit_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_shape_border"
        android:drawableLeft="@mipmap/group_code"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_edit_invite_code"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/checkbox_selector_agreement"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorFont9"
            android:textSize="14sp"
            android:text="@string/agreement"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_register"
        android:textSize="18sp"
        android:textColor="@color/colorFont9"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_white_round_button"
        android:layout_marginTop="30dp"/>
</LinearLayout>