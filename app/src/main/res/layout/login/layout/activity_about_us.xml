<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="cn.zhaocaiapp.zc_app_android.views.activity.AboutUsActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.zhaocaiapp.zc_app_android.views.activity.AboutUsActivity">


        <cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar
            android:id="@+id/about_us_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"></cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar>

        <ImageView
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y160"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y60"
            android:src="@mipmap/about_us_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/about_us_versonal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:text="v1.0.5"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x32" />


        <TextView
            android:id="@+id/about_us_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x32" />
    </LinearLayout>
</layout>
