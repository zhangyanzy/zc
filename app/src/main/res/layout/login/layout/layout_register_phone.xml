<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_32"
        android:paddingStart="@dimen/window_padding_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="密    码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/input_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_margin"
            android:background="@null"
            android:hint="@string/input_pass_word"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="@dimen/edit_line_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_32"
        android:paddingStart="@dimen/window_padding_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="邀请码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/input_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_margin"
            android:background="@null"
            android:hint="@string/input_edit_invite_code"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorLine"
            android:textSize="@dimen/font_size_14"
            android:inputType="text"/>

    </LinearLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="@dimen/edit_line_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_agreement"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/checkbox_selector_agreement"
            android:button="@null"
            android:checked="false"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/edit_margin"
            android:gravity="center_vertical"
            android:text="@string/agreement"
            android:textColor="@color/colorFont9"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/window_padding_32"
        android:layout_marginEnd="@dimen/window_padding_32"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_shape_orange_round"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>