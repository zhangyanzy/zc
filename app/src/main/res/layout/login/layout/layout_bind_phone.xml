<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="33dp">

        <TextView
            android:id="@+id/tv_login_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont6"
            android:textSize="@dimen/font_size_14"
            android:text="@string/auth_success"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape_no_border"
        android:hint="@string/input_phone_number"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/colorFont6"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="70dp"/>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="33dp"
        android:paddingRight="33dp"
        android:layout_marginTop="18dp">

        <EditText
            android:id="@+id/edit_identify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape_no_border"
            android:hint="@string/input_identify_code"
            android:textColorHint="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/colorFont6" />

        <TextView
            android:id="@+id/tv_get_identify_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_orange_bg"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_14"
            android:text="获取验证码"
            android:gravity="center"/>

        <View style="@style/horizontal_C9_line"
            android:layout_below="@+id/edit_identify_code"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_orange_round_bg"
        android:layout_marginTop="80dp"
        android:gravity="center"/>

</LinearLayout>