<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_success"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/window_padding_32"
        android:paddingStart="@dimen/window_padding_32">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_margin"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_phone_number"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorFont9"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        style="@style/horizontal_C9_line"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="@dimen/edit_line_top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="@color/colorFont3"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/edit_identify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:layout_toEndOf="@+id/tv_code"
            android:layout_toStartOf="@+id/tv_get_identify_code"
            android:background="@null"
            android:hint="@string/input_identify_code"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorFont9"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_get_identify_code"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape_orange_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_14"/>

        <View
            style="@style/horizontal_C9_line"
            android:id="@+id/line_pass"
            android:layout_toStartOf="@+id/tv_get_identify_code"
            android:layout_alignBottom="@+id/tv_get_identify_code" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_shape_orange_round"
        android:layout_marginStart="@dimen/window_padding_32"
        android:layout_marginEnd="@dimen/window_padding_32"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />

</LinearLayout>