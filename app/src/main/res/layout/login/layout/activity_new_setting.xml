<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="presenter"
            type="cn.zhaocaiapp.zc_app_android.views.activity.NewSettingActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.zhaocaiapp.zc_app_android.v
        iews.activity.NewSettingActivity">

        <cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar
            android:id="@+id/setting_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"></cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar>


        <RelativeLayout
            android:id="@+id/user_info_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:onClick="@{presenter.onClick}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x20"
                android:text="个人资料"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x40"
                android:src="@mipmap/turn_right" />
        </RelativeLayout>

        <View style="@style/horizontal_F0_line" />


        <RelativeLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:onClick="@{presenter.onClick}"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x20"
                android:text="关于我们"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x40"
                android:src="@mipmap/turn_right" />

        </RelativeLayout>

        <View style="@style/horizontal_F0_line" />

        <RelativeLayout
            android:id="@+id/clear_cache_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:onClick="@{presenter.onClick}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x20"
                android:text="清除缓存"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x40"
                android:text="000M"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />

        </RelativeLayout>

        <View style="@style/horizontal_F0_line" />


        <RelativeLayout
            android:id="@+id/version_number_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x20"
                android:text="版本号"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x40"
                android:text="V.0.0.0"
                android:textColor="@color/color1"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <View style="@style/horizontal_F0_line" />


    </LinearLayout>
</layout>
