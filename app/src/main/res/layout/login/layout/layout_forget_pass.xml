<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_title" />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_shape_no_border"
        android:drawableLeft="@mipmap/icon_logo"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_number"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14"
        android:inputType="phone"/>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_identify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="80dp"
            android:background="@drawable/edit_shape_no_border"
            android:drawableLeft="@mipmap/icon_logo"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="@string/input_identify_code"
            android:maxLines="1"
            android:textColor="@color/colorFont6"
            android:textColorHint="@color/colorFont9"
            android:textSize="@dimen/font_size_14"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_get_idntify_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape_orange_bg"
            android:text="@string/get_identify_code"
            android:textColor="@color/colorGround"
            android:textSize="@dimen/font_size_14"
            android:gravity="center" />

        <View style="@style/horizontal_C9_line"
           android:layout_below="@+id/edit_identify_code"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_shape_no_border"
        android:drawableLeft="@mipmap/icon_logo"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_new_pass"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14"
        android:inputType="textPassword"/>

    <View style="@style/horizontal_C9_line"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>

    <TextView
        android:id="@+id/tv_reset_pass"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_orange_round"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
</LinearLayout>