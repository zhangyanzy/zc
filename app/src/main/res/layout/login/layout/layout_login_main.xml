<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tv_skip_login"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/button_shape_gray_round"
        android:text="跳过"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_12"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="160dp"
        android:layout_height="84dp"
        android:layout_below="@+id/tv_skip_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/iv_app_logo"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_15"
        android:text="账号"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/iv_app_logo"
        android:layout_toEndOf="@+id/tv_account"
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_alignTop="@+id/tv_account"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_number"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <View style="@style/horizontal_C9_line"
        android:id="@+id/line_phone"
        android:layout_below="@+id/edit_phone_number"
        android:layout_marginTop="@dimen/edit_line_top"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"/>

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/line_phone"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_15"
        android:text="密码"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edit_pass_word"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/edit_phone_number"
        android:layout_toStartOf="@+id/tv_forget_pass"
        android:layout_marginRight="@dimen/edit_margin"
        android:layout_alignTop="@+id/tv_pass"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_pass_word"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_pass"
        android:layout_marginRight="@dimen/window_padding_32"
        android:text="@string/forget_pass_word"
        android:textColor="@color/colorFont9"
        android:textSize="@dimen/font_size_14"
        android:gravity="center"/>

    <View style="@style/horizontal_C9_line"
        android:id="@+id/line"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginTop="@dimen/edit_line_top"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_orange_round"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_white_round"
        android:text="注册"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"/>

    <TextView
        android:id="@+id/tv_social_login"
        android:layout_below="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/other_login_mode"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_14"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_wechat" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_qq" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_sina"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_sina" />
    </LinearLayout>
</RelativeLayout>