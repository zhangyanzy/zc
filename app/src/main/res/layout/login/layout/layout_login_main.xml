<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="28dp"
    android:paddingBottom="35dp">

    <TextView
        android:id="@+id/tv_skip_login"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/window_padding_15"
        android:background="@drawable/button_shape_gray_round"
        android:gravity="center"
        android:text="跳过"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_12" />

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="158dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_skip_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo_title" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_app_logo"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="账号"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_15" />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_account"
        android:layout_below="@+id/iv_app_logo"
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_toEndOf="@+id/tv_account"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_number"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <View
        android:id="@+id/line_phone"
        style="@style/horizontal_C9_line"
        android:layout_below="@+id/edit_phone_number"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="@dimen/edit_line_top"/>

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_phone"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="密码"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_15" />

    <EditText
        android:id="@+id/edit_pass_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_pass"
        android:layout_alignBottom="@+id/tv_pass"
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginRight="@dimen/edit_margin"
        android:layout_toEndOf="@+id/tv_pass"
        android:layout_toStartOf="@+id/tv_forget_pass"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_pass_word"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_pass"
        android:layout_marginRight="@dimen/window_padding_32"
        android:gravity="center"
        android:text="@string/forget_pass_word"
        android:textColor="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <View
        android:id="@+id/line_pass"
        style="@style/horizontal_C9_line"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="@dimen/edit_line_top"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_shape_orange_round"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/window_padding_32"
        android:layout_marginRight="@dimen/window_padding_32"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_white_round"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_social_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_social_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/other_login_mode"
        android:textColor="@color/colorFont3"
        android:textSize="@dimen/font_size_14" />

    <LinearLayout
        android:id="@+id/layout_social_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_wechat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/umeng_socialize_wechat" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_qq"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/umeng_socialize_qq" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_sina"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/umeng_socialize_sina" />
    </LinearLayout>
</RelativeLayout>