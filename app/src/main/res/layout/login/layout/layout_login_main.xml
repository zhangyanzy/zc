<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_skip_login"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_shape_gray_round"
        android:text="@string/skip_login"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_12"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_skip_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/login_logo_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/log_tip"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_14" />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo_tip"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_shape_no_border"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_number"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <View style="@style/horizontal_C9_line"
        android:layout_below="@+id/edit_phone_number"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:id="@+id/edit_pass_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phone_number"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_shape_no_border"
        android:drawableLeft="@mipmap/pass"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:hint="@string/input_pass_word"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/colorFont6"
        android:textColorHint="@color/colorFont9"
        android:textSize="@dimen/font_size_14" />

    <View style="@style/horizontal_C9_line"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/pass_length"
        android:textColor="@color/colorRemind"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:autoLink="web"
        android:text="@string/forget_pass_word"
        android:textColor="@color/colorWarning"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_pass_word"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/button_register"
        android:textColor="@color/colorWarning"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_register"
        android:layout_toStartOf="@+id/tv_register"
        android:text="还没有账号？去"
        android:textColor="@color/colorFont6"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_orange_round_bg"
        android:text="@string/button_login"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/layout_other_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/other_login_mode"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_12" />

        <View
            style="@style/horizontal_C9_line"
            android:layout_marginEnd="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_wechat" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_qq" />

        <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
            android:id="@+id/login_sina"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_sina" />
    </LinearLayout>
</RelativeLayout>