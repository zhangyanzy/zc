<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="cn.zhaocaiapp.zc_app_android.views.commerclal.BillLoggingActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.zhaocaiapp.zc_app_android.views.commerclal.BillLoggingActivity">

        <cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar
            android:id="@+id/bill_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"></cn.zhaocaiapp.zc_app_android.widget.NavigationTopBar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/yellow"
            app:tabIndicatorHeight="@dimen/y2"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/yellow"
            app:tabTextAppearance="@style/TabLayout.TabText"
            app:tabTextColor="@color/colorBlack"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>
</layout>
