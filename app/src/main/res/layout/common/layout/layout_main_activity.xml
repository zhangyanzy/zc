<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/layout_group_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <RadioButton
            android:id="@+id/group_button_task"
            style="@style/main_tab_bottom"
            android:checked="false"
            android:drawableTop="@drawable/merchant_my_activity_item"
            android:text="精选活动"
            android:textColor="@drawable/button_selector_text_color"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/group_button_partner"
            style="@style/main_tab_bottom"
            android:checked="false"
            android:drawableTop="@drawable/merchant_my_info_item"
            android:text="商家活动"
            android:textColor="@drawable/button_selector_text_color"
            android:textSize="10sp"
            android:visibility="gone"
            />

        <RadioButton
            android:id="@+id/group_button_personal"
            style="@style/main_tab_bottom"
            android:checked="false"
            android:drawableTop="@drawable/merchant_my_info_item"
            android:text="我的"
            android:textColor="@drawable/button_selector_text_color"
            android:textSize="10sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/layout_group_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/x150"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_shape_red_round"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_8"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/layout_group_button"
        android:background="@color/colorFont9" />

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_group_button"
        android:layout_marginBottom="1dp">

    </FrameLayout>
</RelativeLayout>
