<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_activity_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_item_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorFont6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                android:id="@+id/activity_item_text_user0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_default"
                android:visibility="invisible" />

            <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                android:id="@+id/activity_item_text_user1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_default"
                android:visibility="invisible" />

            <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
                android:id="@+id/activity_item_text_user2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_default"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_item_text_area_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/area"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/activity_item_text_area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/activity_item_text_collection"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:src="@mipmap/collection_off" />

        <ImageView
            android:id="@+id/activity_item_text_share"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:src="@mipmap/share_list" />
    </LinearLayout>

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_F0_line" />

    <LinearLayout
        android:id="@+id/activity_item_text_centent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:src="@mipmap/logo_money" />

                <TextView
                    android:id="@+id/activity_item_text_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/colorFont6"
                    android:textSize="18sp"
                    android:text="0.00"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:text="@string/activity_surplus_amount"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/activity_item_text_amount_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progressDrawable="@drawable/progress_activity_list" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0"
                    android:src="@mipmap/user" />

                <TextView
                    android:id="@+id/activity_item_text_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/colorFont6"
                    android:textSize="18sp"
                    android:text="0"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:text="@string/activity_received_number"
                    android:textColor="@color/colorFont6"
                    android:textSize="12sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/activity_item_text_number_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progressDrawable="@drawable/progress_activity_list" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="right"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <LinearLayout
                    android:id="@+id/layout_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_item_text_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFont6"
                        android:textSize="@dimen/font_size_20"
                        android:text="0.00"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奖励 元/人"
                        android:textColor="@color/colorFont6"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/logo_money"
                    android:layout_toStartOf="@+id/layout_reward"
                    android:layout_alignTop="@+id/layout_reward"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
