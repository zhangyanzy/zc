<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <ImageView
            android:id="@+id/merchant_message_icon"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/y52"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x40"
            android:src="@mipmap/merchant_message_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
            android:layout_toEndOf="@+id/merchant_message_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅值客服"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/merchant_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您上传的活动已经审核通过" />
        </LinearLayout>

        <TextView
            android:id="@+id/merchant_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:text="2018.02.01.18:00" />
    </RelativeLayout>

    <View
        style="@style/horizontal_F0_line"
        android:layout_marginStart="@dimen/x80" />

</LinearLayout>