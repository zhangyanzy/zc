<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_F0_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/width_btn_img"
            android:layout_height="@dimen/height_nav"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/window_padding_15"
            android:paddingTop="12dp"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_search"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/window_padding_15"
            android:layout_marginLeft="@dimen/window_padding_15"
            android:layout_weight="1"
            android:background="@drawable/search_member"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/sousuo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="@string/search_member"
                android:textColor="@color/colorFont6"
                android:textColorHint="@color/colorFont9"
                android:textSize="@dimen/font_size_14"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

