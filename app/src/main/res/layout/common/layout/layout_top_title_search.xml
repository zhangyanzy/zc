<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_F0_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:paddingBottom="12dp"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:src="@mipmap/point_left" />

        <LinearLayout
            android:id="@+id/iv_top_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_member"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@mipmap/search" />

            <EditText
                android:id="@+id/iv_top_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:background="@null"
                android:hint="@string/search_member"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorFont6"
                android:textColorHint="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

