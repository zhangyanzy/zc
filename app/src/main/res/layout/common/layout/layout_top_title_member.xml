<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_top_back"
        android:layout_width="@dimen/width_btn_img"
        android:layout_height="@dimen/height_nav"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_btn_img"
        android:scaleType="fitCenter"
        android:src="@mipmap/back" />

    <EditText
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_top_menu"
        android:layout_width="@dimen/width_btn_img"
        android:layout_height="@dimen/height_nav"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_btn_img"
        android:scaleType="fitCenter"
        android:src="@mipmap/message" />

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_F0_line"
        android:layout_below="@+id/iv_top_menu" />

</RelativeLayout>

