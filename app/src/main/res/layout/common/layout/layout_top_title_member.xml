<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/width_btn_img"
            android:layout_height="@dimen/height_nav"
            android:layout_weight="0">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_search"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_member">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/sousuo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="@string/search_member"
                android:textColor="@color/colorFont6"
                android:textColorHint="@color/colorFont9"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_btn_img"
            android:layout_height="@dimen/height_nav"
            android:layout_weight="0">

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_F0_line"
        android:layout_below="@+id/iv_top_menu" />

</RelativeLayout>

