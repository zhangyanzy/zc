<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp">


    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
        android:id="@+id/activity_item_member_logo"
        android:layout_width="@dimen/member_logo"
        android:layout_height="@dimen/member_logo"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/member_logo_frame" />

    <TextView
        android:id="@+id/activity_item_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:text="凯迪拉克" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:text="@string/activity_region" />

    <TextView
        android:id="@+id/activity_item_member_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:text="上海" />
</LinearLayout>
