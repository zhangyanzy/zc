<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp">


    <cn.zhaocaiapp.zc_app_android.widget.CircleImageView
        android:id="@+id/activity_item_member_logo"
        android:layout_width="@dimen/member_logo"
        android:layout_height="@dimen/member_logo"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/member_logo_frame" />

    <TextView
        android:id="@+id/activity_item_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="7dp"
        android:layout_weight="1"
        android:textColor="@color/colorFont3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_member_area_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:text="@string/activity_region"
        android:textColor="@color/colorFont6"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/activity_item_member_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:textColor="@color/colorFont6"
        android:textSize="14sp" />
</LinearLayout>
