<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ApplicationTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="MainColorTranslucentTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="DefaultColorTranslucentTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Activity_Dialog" parent="AppTheme.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>